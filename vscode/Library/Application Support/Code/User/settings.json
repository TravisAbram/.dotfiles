{
    "workbench.colorTheme": "Nord",
    "editor.fontFamily": "SauceCodePro Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "clock.dateFormat": "ddd, mmmm dS, h:MM TT",
    "git.autofetch": true,
    "git.confirmSync": false,
    "vim.insertModeKeyBindings": [
        {
          "before": ["j", "k"],
          "after": ["<Esc>"]
        }
      ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["L"],
            "after": ["g", "t"]
        },
        {
            "before": ["H"],
            "after": ["g", "T"]
        },
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "black",
    "vim.statusBarColorControl": false,
    "vim.useSystemClipboard": true,
    "vim.easymotionMarkerFontFamily": "SauceCodePro Nerd Font",
    "vim.easymotionMarkerHeight": 20,
    "vim.easymotionMarkerWidthPerChar": 10,
    "vim.easymotionMarkerYOffset": 1,
    "editor.lineNumbers": "relative",
    "editor.fontLigatures": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "python.linting.flake8Args": [
        "--max-line-length=88"
    ],
    "python.formatting.blackArgs": [
        "--line-length=88"
    ],
    "vim.highlightedyank.enable": true,
    "files.autoSave": "afterDelay",
    "editor.cursorSmoothCaretAnimation": true,
    "workbench.sideBar.location": "right",
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.views.fileHistory.avatars": false,
}